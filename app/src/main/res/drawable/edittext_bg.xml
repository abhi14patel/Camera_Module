<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <shape>
                <corners android:radius="3dp" />
                <solid android:color="#797879" />
            </shape>

            <item android:bottom="@dimen/_5sdp"
                android:left="@dimen/_5sdp"
                android:top="@dimen/_5sdp"
                android:right="@dimen/_5sdp">
                <shape
                    android:shape="rectangle">

                    <gradient android:angle="270"
                        android:startColor="@color/colorWhite"
                        android:centerColor="@color/colorWhite"
                        android:endColor="@color/colorWhite"/>

                    <corners android:radius="@dimen/_7sdp" />

                    <padding
                        android:bottom="@dimen/_10sdp"
                        android:left="@dimen/_10sdp"
                        android:right="@dimen/_10sdp"
                        android:top="@dimen/_10sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>