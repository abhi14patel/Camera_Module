<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlProfile"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <com.module.profilelib.circleimageview.CircleImageView
                    android:id="@+id/ivUser"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/ic_default_user"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivTakePicture"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_marginLeft="@dimen/_60sdp"
                    app:srcCompat="@drawable/ic_photo_camera"
                    android:background="@drawable/bg_circle2"
                    android:layout_gravity="center|bottom"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--Name-->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:padding="@dimen/_12sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.AppCompatImageView
                                    app:srcCompat="@drawable/ic_user_colored"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp" />

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:layout_gravity="center|left"
                                    android:gravity="center|left"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="Name"
                                        android:layout_gravity="left|center"
                                        android:gravity="left|center"
                                        android:textColor="@color/colorGrey2"
                                        style="@style/CustomColoredFont"/>

                                    <TextView
                                        android:text="Abhishek Patel"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textColor="@color/colorBlack"
                                        android:layout_gravity="left|center"
                                        android:gravity="left|center"
                                        style="@style/CustomColoredFont"/>

                                </LinearLayout>


                                <android.support.v7.widget.AppCompatImageView
                                    app:srcCompat="@drawable/ic_edit"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp" />

                            </LinearLayout>

                            <View
                                android:background="@color/colorGrey4"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_height="@dimen/_1sdp"/>

                        </LinearLayout>

                        <!--Email-->
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:padding="@dimen/_12sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.AppCompatImageView
                                    app:srcCompat="@drawable/ic_email"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp" />

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:layout_gravity="center|left"
                                    android:gravity="center|left"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="Email"
                                        android:layout_gravity="left|center"
                                        android:gravity="left|center"
                                        android:textColor="@color/colorGrey2"
                                        style="@style/CustomColoredFont"/>

                                    <TextView
                                        android:text="test@gmail.com"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textColor="@color/colorBlack"
                                        android:layout_gravity="left|center"
                                        android:gravity="left|center"
                                        style="@style/CustomColoredFont"/>

                                </LinearLayout>


                                <android.support.v7.widget.AppCompatImageView
                                    app:srcCompat="@drawable/ic_edit"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp" />

                            </LinearLayout>

                            <View
                                android:background="@color/colorGrey4"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_height="@dimen/_1sdp"/>

                        </LinearLayout>

                        <!--Mobile-->
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:padding="@dimen/_12sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.AppCompatImageView
                                    app:srcCompat="@drawable/ic_mobile"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp" />

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:layout_gravity="center|left"
                                    android:gravity="center|left"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="Mobile"
                                        android:layout_gravity="left|center"
                                        android:gravity="left|center"
                                        android:textColor="@color/colorGrey2"
                                        style="@style/CustomColoredFont"/>

                                    <TextView
                                        android:text="+91 9617041225"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textColor="@color/colorBlack"
                                        android:layout_gravity="left|center"
                                        android:gravity="left|center"
                                        style="@style/CustomColoredFont"/>

                                </LinearLayout>


                                <android.support.v7.widget.AppCompatImageView
                                    app:srcCompat="@drawable/ic_edit"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:visibility="invisible"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp" />

                            </LinearLayout>

                            <View
                                android:background="@color/colorGrey4"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_height="@dimen/_1sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
